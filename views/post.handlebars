<div class="row flex">
    <div class="col bg-dark">
        <div class="card-body text-light p-4">
            <img src="../{{post.user.user_img}}" class="img-thumbnail" alt="profile image">
            <p>{{post.user.name}}</p>
             <div>
                <p>{{format_date post.date_created}}</p>
            </div>
            <h5 class="card-title">{{post.post_title}}</h5>
            <p class="card-text">{{post.post_body}}</p>
            <hr>
        </div>
        {{#each post.answers as |answer|}}
        <div class="card-body text-light p-4">
            <div>
                <img src="../{{answer.user.user_img}}" class="img-thumbnail" alt="profile image">
                <p>{{answer.user.name}}</p>
            </div>
            <div>
                <p>{{format_date answer.date_created}}</p>
            </div>
            <div>
                {{answer.answer_body}}
            </div>
            <br>
            <hr>
            <br>
        </div>
        {{/each}}
        <div class="">
        <form id="add-answer-form">
            <div>
                <label for="answer-body" class="form-label">Add your Comment:</label>
            </div>
            <div>
                <div>
                    <textarea id="answer-body" name="answer-body" placeholder="Add your Comment"
                        class="form-control"></textarea>
                    <input type="hidden" name="post-id" id="post-id" value="{{post.post_id}}">
                </div>
                <div class="mt-3" style="display: flex; justify-content: flex-end;">
                    {{#if logged_in}}
                    <button type="submit"
                        class="btn btn-secondary">Comment</button>
                    {{else}}
                    <a href="/api/users/login"
                        class="btn btn-secondary">Sign In</a>
                    {{/if}}
                </div>
            </div>
        </form>
    </div>
    </div>
</div>
<script src="/js/addAnswer.js"></script>